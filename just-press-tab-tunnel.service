[Unit]
Description=Cloudflare Tunnel for just-press-tab.com
After=network.target

[Service]
Type=simple
User=slyle
WorkingDirectory=/home/slyle/Projects/just_press_tab
ExecStart=/usr/bin/cloudflared tunnel --config /home/slyle/Projects/just_press_tab/just-press-tab.yml run
Restart=always
RestartSec=5
KillMode=mixed
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target 